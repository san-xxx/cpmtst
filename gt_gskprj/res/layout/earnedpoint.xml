<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_header"
    android:orientation="vertical" >

    <!-- Include Header Bar -->
    
    <LinearLayout
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_header"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/flex_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_header"
        android:padding="5sp" >

        <TextView
            android:id="@+id/flex_remembermetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Earned Point"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/flex_intellogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_btn_bg"
            android:onClick="onButtonClick" />

    </RelativeLayout>
    
    <include layout="@layout/titlebg" />

    <LinearLayout
        android:id="@+id/flexviewlist_contentarea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:weightSum="1.0" >

        <RelativeLayout
            android:id="@+id/flexviewlist_1C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_marginRight="3sp"
            android:layout_weight=".8" >

            <TextView
                android:id="@+id/epoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5sp"
                android:text="Enrol"
                android:textColor="#383838"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flexviewlist_2C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_weight=".2" >

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/toggle_turn_off"
                android:textOn="@string/toggle_turn_on" />
        </RelativeLayout>
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/flexviewlist_contentarea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:weightSum="1.0" >

        <RelativeLayout
            android:id="@+id/flexviewlist_1C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_marginRight="3sp"
            android:layout_weight=".8" >

            <TextView
                android:id="@+id/epoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5sp"
                android:text="Enrol"
                android:textColor="#383838"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flexviewlist_2C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_weight=".2" >

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/toggle_turn_off"
                android:textOn="@string/toggle_turn_on" />
        </RelativeLayout>
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/flexviewlist_contentarea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:weightSum="1.0" >

        <RelativeLayout
            android:id="@+id/flexviewlist_1C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_marginRight="3sp"
            android:layout_weight=".8" >

            <TextView
                android:id="@+id/epoint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5sp"
                android:text="Enrol"
                android:textColor="#383838"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flexviewlist_2C"
            android:layout_width="0dip"
            android:layout_height="50sp"
            android:layout_weight=".2" >

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/toggle_turn_off"
                android:textOn="@string/toggle_turn_on" />
        </RelativeLayout>
    </LinearLayout>
    
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/flex_bottombtn1C"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:background="#d2d2d2" >

        <Button
            android:id="@+id/flex_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:background="@drawable/innerbtn"
            android:paddingBottom="10sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:paddingTop="10sp"
            android:text="SAVE"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:onClick="onButtonClick"  />
    </RelativeLayout>

    
</RelativeLayout>